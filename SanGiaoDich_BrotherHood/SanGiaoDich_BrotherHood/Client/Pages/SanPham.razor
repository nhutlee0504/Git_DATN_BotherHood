@page "/sanpham"
@using SanGiaoDich_BrotherHood.Shared.Models
@inject NavigationManager navigation
@inject HttpClient http

<div class="container-fluid mt-3">
    <!-- Breadcrumb -->
    <div class="breadcrumb">
        <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="#"><i class="fa-solid fa-house" style="color: #667085;"></i></a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Giỏ hàng</li>
            </ol>
        </nav>
    </div>

    <div class="row">
        <!-- Sidebar Filters -->
        <div class="col-lg-3">
            <div class="card p-3 mb-3">
                <h5 class="mb-3">Loại</h5>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="aoCheck">
                    <label class="form-check-label" for="aoCheck">Áo</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="quanCheck">
                    <label class="form-check-label" for="quanCheck">Quần</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="giayCheck">
                    <label class="form-check-label" for="giayCheck">Giày</label>
                </div>
                <!-- Price Filter with Button on Same Row -->
                <h5 class="mt-3">Giá tiền</h5>
                <div class="d-flex align-items-center">
                    <input type="text" class="form-control me-2" placeholder="Low">
                    <input type="text" class="form-control me-2" placeholder="High">
                    <button class="btn btn-success">Filter</button>
                </div>

                <h5 class="mt-4">Sắp xếp</h5>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="sortOrder" id="giaTangDan" checked>
                    <label class="form-check-label" for="giaTangDan">Giá tăng dần</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="sortOrder" id="giaGiamDan">
                    <label class="form-check-label" for="giaGiamDan">Giá giảm dần</label>
                </div>
            </div>
        </div>

        <!-- Product Grid (Hardcoded Product Cards) -->
        <div class="col-lg-9">
            <div class="row">
                <!-- Product 1 -->
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card">
                        <a href="ChiTietSanPham">
                            <img src="/AnhSanPham/ao.jpeg" class="card-img-top" alt="Tên sản phẩm">
                        </a>
                        <div class="card-body">
                            <h5 class="card-title">Tên sản phẩm 1</h5>
                            <p class="card-text text-danger"><strong>140.000 VND</strong></p>
                            <div class="d-flex justify-content-between">
                                <p class="card-text">Cần Thơ</p>
                                <p class="card-text text-muted">15 phút trước</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Pagination -->
            <nav aria-label="Product Pagination">
                <ul class="pagination justify-content-center">
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                    <li class="page-item"><a class="page-link" href="#">68</a></li>
                </ul>
            </nav>
        </div>
    </div>
</div>

@code {
    private List<Product> products;
    protected override async Task OnInitializedAsync()
    {

    }
}


