@page "/PageThanhToan"

@code {

}

<style>
    /* Breadcrumb */
    .breadcrumb {
        margin-left: 48px;
        position: relative;
    }

    .breadcrumb nav {
        width: 100%;
    }

    .breadcrumb ol {
        display: flex;
        align-items: center;
        list-style: none;
    }

    .breadcrumb-item.active {
        cursor: pointer;
    }

    .breadcrumb-item + .breadcrumb-item::before {
        content: '>';
        color: #667085;
        margin: 0 8px;
        font-weight: bold;
    }

    /* Checkout */
    .checkout-container {
        width: 80%;
        max-width: 1200px;
        margin: 0 auto;
        padding-bottom: 20px;
    }

    h2, h3 {
        color: #333;
        margin-bottom: 20px;
        font-size: 25px;
    }

    form {
        display: flex;
        justify-content: space-between;
    }

    .form-column {
        width: 48%;
    }

    .form-group {
        margin-bottom: 20px;
    }

        .form-group.full-width {
            width: 100%;
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }

        .form-group input,
        .form-group textarea {
            width: 95%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 10px;
        }

    textarea {
        height: 100px;
    }

    .custom-link {
        color: red;
        font-size: 15px;
        text-decoration: none;
        left: 455px;
        bottom: 30px;
        position: relative;
    }

        .custom-link:hover {
            text-decoration: underline;
        }

    .payment-method {
        width: 525px;
        height: 50%;
        padding: 25px;
        border-radius: 8px;
        box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);
        background-color: #fff;
        position: relative;
        top: 6px;
        display: block;
    }

    .payment-options label {
        display: block;
        font-size: 16px;
        margin-bottom: 15px;
        position: relative;
        padding-left: 30px;
        cursor: pointer;
    }

        .payment-options label input[type="radio"] {
            position: absolute;
            left: 0;
            top: 0;
            margin-right: 10px;
            accent-color: #0051ff; /* Blue accent color for radio button */
        }

            .payment-options label input[type="radio"]:checked + span {
                font-weight: bold;
            }

        .payment-options label span {
            font-weight: normal;
        }

    .product-info {
        margin-top: 40px;
    }

    .product-item {
        display: flex;
        align-items: center;
        justify-content: space-between;
        border-bottom: 1px solid #ddd;
        padding: 20px 0;
    }

        .product-item img {
            width: 80px;
            height: 80px;
            object-fit: cover;
            margin-right: 20px;
        }

    .product-details {
        flex-grow: 1;
    }

    .product-name,
    .product-price,
    .product-quantity {
        display: block;
        margin-bottom: 8px;
        font-weight: bold;
        font-size: 20px;
    }

    .product-price-quantity {
        text-align: right;
    }

    .total-amount {
        margin-top: 40px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        .total-amount h3 {
            margin: 0;
        }

        .total-amount span {
            font-size: 24px;
            color: #333;
            font-weight: bold;
        }

    .submit-btn {
        width: 100%;
        padding: 15px;
        background-color: green;
        color: white;
        border: none;
        border-radius: 4px;
        font-size: 18px;
        cursor: pointer;
        margin-top: 30px;
    }

        .submit-btn:hover {
            background-color: darkgreen;
        }

</style>

<!-- Breadcrumb -->
<div class="breadcrumb">
    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="#"><i class="fa-solid fa-house" style="color: #667085;"></i></a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Thanh toán</li>
        </ol>
    </nav>
</div>


<div class="checkout-container">
    <h1>Thanh toán đơn hàng</h1>
    <h2 style="color: rgb(76, 86, 99);">
        <i class="fas fa-user-circle" style="color: #324154; font-size: 20px; margin-right: 10px;"></i>
        Thông tin người dùng
    </h2>

    <!-- User Information Section -->
    <form>
        <div class="form-column">
            <div class="form-group">
                <label for="username">Tên người đặt</label>
                <input type="text" id="username" placeholder="Nhập tên">
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" placeholder="Nhập email">
            </div>
            <div class="form-group full-width">
                <label for="address">Địa chỉ nhận hàng</label>
                <textarea id="address" placeholder="Số nhà, tên đường, quận/huyện, xã/phường, tỉnh/thành phố"></textarea>
                <a href="#" class="custom-link">Tùy chỉnh</a>
            </div>
        </div>
        <div class="form-column">
            <div class="form-group full-width">
                <label for="phone">Số điện thoại</label>
                <input type="text" id="phone" placeholder="Nhập số điện thoại">
            </div>

            <label for="checkout" style="font-weight: bold;">Hình thức thanh toán</label>
            <div class="payment-method">
                <div class="payment-options">
                    <label>
                        <input type="radio" name="payment" checked>
                        Thanh toán bằng tiền mặt
                    </label>
                    <label>
                        <input type="radio" name="payment">
                        Thanh toán qua chuyển khoản
                    </label>
                    <label>
                        <input type="radio" name="payment">
                        Thanh toán qua ví VnPay
                    </label>
                </div>
            </div>
        </div>
    </form>
    <!-- Product Information Section -->
    <div class="product-info">
        <h1>Thông tin sản phẩm</h1>
        <div class="product-item">
            <img src="https://shopdunk.com/images/thumbs/0029155_iphone-16-pro-max-256gb_240.png" alt="Product 1">
            <div class="product-details">
                <span class="product-name">Tên sản phẩm</span>
                <div class="product-price-quantity">
                    <span class="product-price">Giá: 140.000 VND</span><br>
                    <span class="product-quantity">Số lượng: 2</span>
                </div>
            </div>
        </div>
        <div class="product-item">
            <img src="https://shopdunk.com/images/thumbs/0029837_iphone-16-128gb_240.png" alt="Product 2">
            <div class="product-details">
                <span class="product-name">Tên sản phẩm</span>
                <div class="product-price-quantity">
                    <span class="product-price">Giá: 140.000 VND</span><br>
                    <span class="product-quantity">Số lượng: 2</span>
                </div>
            </div>
        </div>
    </div>
    <!-- Total Amount Section -->
    <div class="total-amount">
        <h3>Tổng tiền</h3>
        <span>1.120.000 VND</span>
    </div>
    <!-- Submit Button -->
    <button class="submit-btn">Đặt hàng</button>
</div>